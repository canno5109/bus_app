<Alloy>

	<!-- iOS -->
	<Window id="gettingOffWin" onOpen="getBusStopName" onFocus="sendGoogleAnalytics" onSwipe="swipeToClose">
		<ActivityIndicator id="activityIndicator" />
		<View id="wholeView">
			<View id="navView">
				<Button id="backBtn" onClick="closeWin" />
				<Label id="gettingOffTitle">降車停留所選択</Label>
			</View>
			<Label id="rideTitle" />
			<ListView id="listView" onItemclick="openTimeTableWin">
				<SearchBar id="search" onCancel="blurKeyboard" onReturn="blurKeyboard" />
				<Templates>
					<ItemTemplate name="busStopTemplate" height="40" backgroundColor="#ffffff">
						<Label bindId="busStopName" id="busStopName" />
						<Button bindId="detailBtn" id="detailBtn" />
					</ItemTemplate>
				</Templates>
				<ListSection id="listSection" />
			</ListView>
		</View>
	</Window>

	<!-- Android -->
	<Window id="gettingOffWin" onOpen="getBusStopName">
		<ActivityIndicator id="activityIndicator" />
		<View id="wholeView">
			<View id="navView">
				<Button id="backBtn" onClick="closeWin" />
				<Label id="gettingOffTitle">降車停留所選択</Label>
			</View>
			<Label id="rideTitle" />
			<ListView id="listView" onItemclick="openTimeTableWin">
				<SearchBar id="search" onCancel="blurKeyboard" onReturn="blurKeyboard" />
				<Templates>
					<ItemTemplate name="busStopTemplate" height="40" backgroundColor="#ffffff">
						<Label bindId="busStopName" id="busStopName" />
						<Button bindId="detailBtn" id="detailBtn" />
					</ItemTemplate>
				</Templates>
				<ListSection id="listSection" />
			</ListView>
		</View>
	</Window>
	
</Alloy>
